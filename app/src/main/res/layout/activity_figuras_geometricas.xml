<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_figuras_geometricas"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/boton"
    tools:context="ale.aprende.aprende.Figuras_geometricas">

    <ImageView
        android:id="@+id/imgPregunta"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imgPregunta"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/imgPregunta"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imgBtnPrimeraOpcion"
            android:layout_width="100dp"
            android:scaleType="centerCrop"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:onClick="opcion1"
            android:background="@color/bootstrap_brand_secondary_fill"
            android:layout_margin="3dp"
            />


        <ImageButton
            android:id="@+id/imgBtnSegundaOpcion"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="opcion2"
            android:scaleType="centerCrop"
            android:background="@color/bootstrap_brand_secondary_fill"
            android:layout_margin="3dp"/>

        <ImageButton
            android:id="@+id/imgBtnTerceraOpcion"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="opcion3"
            android:scaleType="centerCrop"
            android:background="@color/bootstrap_brand_secondary_fill"
            android:layout_margin="3dp"/>
    </LinearLayout>
</RelativeLayout>
