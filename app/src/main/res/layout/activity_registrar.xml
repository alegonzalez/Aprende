<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_registrar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/boton"
    tools:context="ale.aprende.aprende.registrar.Registrar">

    <Button
        android:id="@+id/btnRegistrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/accent"
        android:drawableLeft="@drawable/ic_account_circle_black"
        android:drawableTint="@color/boton"
        android:text="Registrar"
        android:layout_margin="3dp"
        android:textColor="@color/boton"
        android:onClick="registrar"
        android:fontFamily="sans-serif"
        android:textAllCaps="false"
        android:textSize="18sp" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/femenino"
        android:id="@+id/imageView4"
        android:layout_above="@+id/rbtFemenina"
        android:layout_toLeftOf="@+id/txtSelecciónGenero"
        android:layout_toStartOf="@+id/txtSelecciónGenero" />

    <RadioButton
        android:text="Niña"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rbtFemenina"
        android:layout_above="@+id/btnRegistrar"
        android:layout_alignLeft="@+id/imageView4"
        android:layout_alignStart="@+id/imageView4" />

    <RadioButton
        android:text="Niño"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rbtMasculino"
        android:layout_above="@+id/btnRegistrar"
        android:layout_alignLeft="@+id/imgMasculino"
        android:layout_alignStart="@+id/imgMasculino" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/masculino"
        android:id="@+id/imgMasculino"
        android:layout_above="@+id/rbtMasculino"
        android:layout_toRightOf="@+id/btnRegistrar"
        android:layout_toEndOf="@+id/btnRegistrar" />



    <Button
        style="@style/Widget.AppCompat.Button.Colored"
        android:id="@+id/btnCargar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/accent"
        android:drawableLeft="@android:drawable/stat_sys_upload_done"
        android:onClick="cargarFoto"
        android:text="Cargar foto de galería"
        android:textColor="@color/boton"
        tools:ignore="HardcodedText,RtlHardcoded"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:textAllCaps="false" />

    <TextView
        android:id="@+id/txtSelecciónGenero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seleccione el género"
        android:layout_alignTop="@+id/imgMasculino"
        android:layout_toLeftOf="@+id/imgMasculino"
        android:layout_toStartOf="@+id/imgMasculino"
        android:layout_marginTop="33dp" />

    <ImageView
        android:id="@+id/imgPerfil"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignRight="@+id/btnCargar"
        android:layout_alignEnd="@+id/btnCargar"
        android:layout_alignLeft="@+id/btnCargar"
        android:layout_alignStart="@+id/btnCargar"
        android:padding="1dp"
        android:background="@drawable/perfil"
        android:layout_above="@+id/btnCargar" />

</RelativeLayout>
