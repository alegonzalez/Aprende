<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlMenuJuego"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/boton"
    android:orientation="vertical"
    android:padding="15dp">


    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/btn_figuras_geometricas"
        android:layout_width="wrap_content"
        android:layout_height="95dp"
        android:layout_alignEnd="@+id/btn_colores"
        android:layout_alignLeft="@+id/btn_numeros"

        android:layout_alignRight="@+id/btn_colores"
        android:layout_alignStart="@+id/btn_numeros"
        android:layout_below="@+id/btn_numeros"
        android:layout_marginTop="5dp"
        android:backgroundTint="@color/wallet_link_text_light"
        android:drawableLeft="@drawable/ic_https_white_48dp"
        android:onClick="figuras_geometricas"
        android:text="Figuras geomÃ©tricas"
        app:bootstrapSize="lg"
        app:buttonMode="regular"
        app:roundedCorners="true"
        app:showOutline="false" />

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/btn_numeros"
        android:layout_width="100dp"
        android:layout_height="95dp"
        android:layout_alignEnd="@+id/btn_colores"
        android:layout_alignLeft="@+id/btn_colores"
        android:layout_alignRight="@+id/btn_colores"
        android:layout_alignStart="@+id/btn_colores"
        android:layout_below="@+id/btn_colores"
        android:layout_marginTop="5dp"
        android:backgroundTint="@android:color/holo_orange_dark"
        android:drawableLeft="@drawable/ic_https_white_48dp"
        android:onClick="numeros"
        android:text="Numeros"
        app:bootstrapSize="lg"
        app:buttonMode="regular"
        app:roundedCorners="true"
        app:showOutline="false" />

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/btn_colores"
        android:layout_width="100dp"
        android:layout_height="95dp"
        android:layout_marginTop="5dp"
        android:layout_alignEnd="@+id/btn_relaciones_espaciales"
        android:layout_alignLeft="@+id/btn_relaciones_espaciales"
        android:layout_alignRight="@+id/btn_relaciones_espaciales"
        android:layout_alignStart="@+id/btn_relaciones_espaciales"
        android:layout_below="@+id/btn_relaciones_espaciales"
        android:backgroundTint="@android:color/holo_red_dark"
        android:drawableLeft="@drawable/ic_https_white_48dp"
        android:onClick="colores"
        android:text="Colores"
        app:bootstrapSize="lg"
        app:buttonMode="regular"
        app:roundedCorners="true"
        app:showOutline="false" />

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/btn_abecedario"

        android:layout_height="95dp"
        android:layout_marginTop="5dp"
        android:layout_alignEnd="@+id/btn_figuras_geometricas"
        android:layout_alignLeft="@+id/btn_figuras_geometricas"
        android:layout_alignRight="@+id/btn_figuras_geometricas"
        android:layout_alignStart="@+id/btn_figuras_geometricas"
        android:layout_below="@+id/btn_figuras_geometricas"

        android:backgroundTint="@color/colorBoton"
        android:drawableLeft="@drawable/ic_https_white_48dp"
        android:onClick="abecedario"
        android:text="Abecedario"
        app:bootstrapSize="lg"
        app:buttonMode="regular"
        app:roundedCorners="true"
        app:showOutline="false"
        android:layout_width="100dp"
        tools:ignore="HardcodedText" />

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/btn_relaciones_espaciales"
        android:layout_width="wrap_content"
        android:layout_height="95dp"
        android:layout_marginTop="5dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@android:color/holo_green_dark"
        android:drawableLeft="@drawable/ic_https_white_48dp"
        android:onClick="relacionesEspaciales"
        android:text="Relaciones espaciales"
        app:bootstrapSize="lg"
        app:buttonMode="regular"
        app:roundedCorners="true"
        app:showOutline="false" />

</RelativeLayout>