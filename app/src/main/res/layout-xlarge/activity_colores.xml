<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_colores"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/boton"
    tools:context="ale.aprende.aprende.Colores">

    <ImageView
        android:id="@+id/imgPregunta"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imgPregunta"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/imgPregunta"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/BtnPrimeraOpcion"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:onClick="opcion1"
            android:layout_margin="3dp"
            android:background="@color/bootstrap_brand_secondary_fill"/>


        <Button
            android:id="@+id/BtnSegundaOpcion"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:onClick="opcion2"
            android:scaleType="centerCrop"
            android:background="@color/bootstrap_brand_secondary_fill"
            android:layout_margin="3dp"/>

        <Button
            android:id="@+id/BtnTerceraOpcion"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:onClick="opcion3"
            android:scaleType="centerCrop"
            android:layout_margin="3dp"
            android:background="@color/bootstrap_brand_secondary_fill"/>
    </LinearLayout>


</RelativeLayout>
