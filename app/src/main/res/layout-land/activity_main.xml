<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ale.aprende.aprende.principal.MainActivity">


    <TextView
        android:text="Ingresar"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtIngresar"
        tools:ignore="HardcodedText"
        android:layout_alignBaseline="@+id/txtRegistrar"
        android:layout_alignBottom="@+id/txtRegistrar"
        android:layout_toRightOf="@+id/registrar"
        android:layout_toEndOf="@+id/registrar"
        android:layout_marginLeft="110dp"
        android:layout_marginStart="110dp" />

    <TextView
        android:text="Registrar"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtRegistrar"
        tools:ignore="HardcodedText"
        android:layout_marginLeft="152dp"
        android:layout_marginStart="152dp"
        android:layout_marginTop="63dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ingresar"
        android:id="@+id/ingresar"
        android:background="?attr/selectableItemBackground"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="6dp"
        android:layout_marginStart="6dp"
        android:layout_below="@+id/txtIngresar"
        android:layout_alignLeft="@+id/txtIngresar"
        android:layout_alignStart="@+id/txtIngresar"
        android:onClick="ingresar" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/registrar"
        android:id="@+id/registrar"
        android:background="?attr/selectableItemBackground"
        android:layout_alignTop="@+id/ingresar"
        android:layout_alignLeft="@+id/txtRegistrar"
        android:layout_alignStart="@+id/txtRegistrar"
        android:layout_marginLeft="6dp"
        android:layout_marginStart="6dp"
        android:onClick="registrar" />
</RelativeLayout>
