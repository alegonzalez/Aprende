<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlMenuJuego"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/boton"
    android:orientation="vertical">

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/btn_colores"
        android:layout_width="290dp"
        android:layout_height="80dp"
        android:layout_alignBottom="@+id/btn_relaciones_espaciales"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/btn_relaciones_espaciales"
        android:layout_toRightOf="@+id/btn_relaciones_espaciales"
        android:drawableLeft="@drawable/ic_https_white_48dp"
        android:text="Colores"
        android:onClick="colores"
        app:bootstrapBrand="danger"
        app:bootstrapSize="lg"
        app:buttonMode="regular"
        app:roundedCorners="true"
        app:showOutline="false" />

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/btn_relaciones_espaciales"
        android:layout_width="290dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="26dp"
        android:drawableLeft="@drawable/ic_https_white_48dp"
        android:text="Relaciones espaciales"
        app:bootstrapBrand="info"
        app:bootstrapSize="lg"
        app:buttonMode="regular"
        app:roundedCorners="true"
        app:showOutline="false"
        android:onClick="relacionesEspaciales"/>

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/btn_numeros"
        android:layout_width="290dp"
        android:layout_height="80dp"
        android:layout_alignLeft="@+id/btn_relaciones_espaciales"
        android:layout_alignStart="@+id/btn_relaciones_espaciales"
        android:layout_below="@+id/btn_relaciones_espaciales"
        android:layout_marginTop="8dp"
        android:drawableLeft="@drawable/ic_https_white_48dp"
        android:text="Numeros"
        app:bootstrapBrand="success"
        android:onClick="numeros"
        app:bootstrapSize="lg"
        app:buttonMode="regular"
        app:roundedCorners="true"
        app:showOutline="false" />

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/btn_figuras_geometricas"
        android:layout_width="290dp"
        android:layout_height="80dp"
        android:layout_alignLeft="@+id/btn_colores"
        android:layout_alignStart="@+id/btn_colores"
        android:layout_below="@+id/btn_colores"
        android:layout_marginTop="6dp"
        android:drawableLeft="@drawable/ic_https_white_48dp"
        android:text="Figuras geomÃ©tricas"
        app:bootstrapBrand="primary"
        app:bootstrapSize="lg"
        app:buttonMode="regular"
        app:roundedCorners="true"
        app:showOutline="false"
        android:onClick="figuras_geometricas"/>

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/btn_abecedario"
        android:layout_width="290dp"
        android:layout_height="80dp"
        android:layout_marginEnd="150dp"
        android:layout_marginRight="150dp"
        android:drawableLeft="@drawable/ic_https_white_48dp"
        android:text="Abecedario"
        app:bootstrapBrand="warning"
        app:bootstrapSize="lg"
        app:buttonMode="regular"
        app:roundedCorners="true"
        app:showOutline="false"
        android:layout_below="@+id/btn_numeros"
        android:layout_alignRight="@+id/btn_figuras_geometricas"
        android:layout_alignEnd="@+id/btn_figuras_geometricas"
        android:layout_marginTop="25dp"
        android:onClick="abecedario"/>

</RelativeLayout>